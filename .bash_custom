# History
HISTSIZE=1000000
HISTFILESIZE=1000000
HISTCONTROL=ignoreboth

# Aliases
alias less='less -i'

# Completions
#  - Git: https://raw.githubusercontent.com/git/git/master/contrib/completion/git-completion.bash
#  - Make: https://gist.githubusercontent.com/tlrobinson/1073865/raw/79ad8d36057666ee0459fe2b70142685c532edcf/gistfile1.bash
mkdir -p ~/.bash_completions
for file in `ls ~/.bash_completions`
  do . ~/.bash_completions/${file}
done
